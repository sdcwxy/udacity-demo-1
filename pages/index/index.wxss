/**index.wxss**/
.temp-bgp {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: -1
}

.temp-box {
  position: relative;
  padding-top: 170rpx;
  padding-bottom: 250rpx;
}

.temp {
  font-size: 200rpx;
  line-height: 280rpx;
  text-align: center;
}

.describe {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
}

.predict-temp {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 45rpx;
}

.predict-weather {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.predict-title {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-list {
  display: flex;
}

.forecast-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  flex-shrink: 0;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forcase-sign {
  margin-top: 50rpx;
  height: 60rpx;
  width: 60rpx;
}

.forecast-temp {
  margin-top: 45rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}